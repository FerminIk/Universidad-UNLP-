package ejercicio1;

public class PilaArbol {
	private NodoPila tope;

	public PilaArbol() {
		super();
		this.tope = null;
	}
	
	public boolean pilaVacia() {
		return tope == null;
	}

	public void insertar(ArbolBinario<T> elemento) {
		NodoPila nuevo;
		nuevo = new NodoPila(elemento);
		nuevo.setSiguiente(tope);
		tope = nuevo;
	}
	
	public ArbolBinario topePila() {
		return tope.getDato();
	}
	
	public void reiniciarPila() {
		tope = null;
	}
	
	public ArbolBinario descolar() {
		ArbolBinario aux = null;
		if (!pilaVacia()) {
			aux = tope.getDato();
			tope = tope.getSiguiente();
		}
		return aux;
	}
	
}
